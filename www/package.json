{
  "name": "pixel32-editor",
  "version": "0.1.0",
  "description": "Pixel32 Real Tiny Computer",
  "main": "main.js",
  "author": "Murilo Polese <murilopolese@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist > /dev/null",
    "build": "yarn run mkdir-dist && yarn run inline && yarn run compress",
    "mkdir-dist": "mkdir -p dist",
    "inline": "./node_modules/.bin/inliner index.html > dist/index.html && ./node_modules/.bin/inliner docs.html > dist/docs.html",
    "compress": "gzip -f -c dist/index.html > dist/index.html.gz && gzip -f -c dist/docs.html > dist/docs.html.gz && cp docs.md dist/docs.md"
  },
  "dependencies": {
    "strapdown": "murilopolese/strapdown",
    "webrepl-client": "murilopolese/webrepl-client",
    "xterm": "^3.7.0"
  },
  "devDependencies": {
    "inliner": "^1.13.1"
  }
}
